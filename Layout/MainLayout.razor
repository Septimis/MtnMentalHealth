			<a href="/contact" class="headerLinks" @onclick="OnHeaderLinkClick">Contact Us</a>
		</div>
	</div>
	<div id="hamburger" class="@active" @onclick="ToggleActive">
		<span class="hamburgerBar"></span>
		<span class="hamburgerBar"></span>
		<span class="hamburgerBar"></span>
	</div>
</nav>

